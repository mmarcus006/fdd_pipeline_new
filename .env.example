# Franchise Scrapers Configuration
# Copy this file to .env and update with your settings

# Browser Configuration
HEADLESS=true                    # Run browser in headless mode (true/false)

# Download Configuration
DOWNLOAD_DIR=./downloads         # Directory for PDF downloads

# Rate Limiting
THROTTLE_SEC=0.5                # Base delay between page actions (seconds)

# Retry Configuration
PDF_RETRY_MAX=3                 # Maximum retry attempts for PDF downloads
PDF_RETRY_BACKOFF=1,2,4         # Comma-separated retry delays in seconds

# Parallelization
MAX_WORKERS=4                   # Maximum concurrent workers for Wisconsin search